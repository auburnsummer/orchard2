{% extends "cafe/layouts/with_header.jinja" %}
{% block header_content_slot %}
    <div class="create_club diag_pattern_1">
        <form class="create_club_form" action="{{ url('cafe:create_club') }}" method="POST">
            {{ csrf_input }}
            <sl-input label="Group name" help-text="You can change this at any time." name="name"></sl-input>
            <sl-button type="submit">Create group</sl-button>
        </form>
    </div>
{% endblock %}
<style>
.create_club {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;

    & > form {
        padding: 1.5rem;
        background-color: var(--sl-color-neutral-100);
        box-shadow: var(--sl-shadow-large);
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start
    }
}
</style>