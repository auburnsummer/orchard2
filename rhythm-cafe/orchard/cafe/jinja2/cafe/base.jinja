{% set user = request.user %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{ static('vendors/reset.css') }}" />
        {% if user.profile.theme_pref == 'dark' %}
            <link
                rel="stylesheet" href="{{ static('vendors/shoelace-dark.css') }}"
                onload="document.documentElement.classList.add('sl-theme-dark');"
            />
        {% else %}
            <link rel="stylesheet" href="{{ static('vendors/shoelace-light.css') }}" />
        {% endif %}
        <link rel="stylesheet" href="{{ static('cafe/style.css') }}" />

        {# slots
        We have includes (like the header, shoelace components, etc.) that fill in these slots.

        This is so that they are only included once.
        #}
        {% block cssslot_header %}{% endblock %}
        {% block cssslot_page %}{% endblock %}

        {% block jsslot_sl_button %} {% endblock%}
        {% block jsslot_sl_dropdown %} {% endblock %}
        {% block jsslot_sl_menu %} {% endblock %}
        {% block jsslot_sl_input %} {% endblock %}
        {% block jsslot_sl_icon %} {% endblock %}
        {% block jsslot_sl_icon_button %} {% endblock %}
        {% block jsslot_sl_details %} {% endblock %}
        {% block jsslot_sl_select %} {% endblock %}

        <script src="{{ static('vendors/htmx.js') }}"></script>
        <script src="{{ static('vendors/htmx.ext.shoelace.js') }}"></script>
        <script src="{{ static('vendors/surreal.js') }}"></script>

        <title>{% block title %}{% endblock %} - Rhythm Caf√©</title>
    </head>
    <body hx-ext="shoelace">
        {% block body %}

        {% endblock %}
    </body>
</html>