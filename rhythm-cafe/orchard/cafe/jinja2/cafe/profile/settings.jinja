{% from "cafe/base.jinja" import base %}
{% from "cafe/profile/layout.jinja" import layout %}

{% set content %}
    <div class="profsettings">
        <form class="profsettings_settings" action="{{ url('cafe:settings') }}" method="post">
            {{ csrf_input }}
            <sl-select class="profsettings_theme" label="Theme" value="{{ request.user.profile.theme_pref }}" name="theme_pref">
                <sl-option value="light">Light</sl-option>
                <sl-option value="dark">Dark</sl-option>
            </sl-select>
            <sl-button class="profsettings_submit" type="submit">Change settings</sl-button>
        </form>
    </div>
{% endset %}

{% call base(title="Rhythm Cafe", user=request.user) %}
    {% call layout(user=request.user, csrf_input=csrf_input) %}
        {{ content }}
    {% endcall %}
{% endcall %}

<style data-hoist="true">
.profsettings_settings {
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 0.5rem;
}
</style>